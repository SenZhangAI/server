--echo This must show type=index, extra=Using where
set use_sort_nest= 0;
let $query= SELECT * FROM t1 FORCE INDEX (PRIMARY) WHERE parent_id IS NOT NULL ORDER BY id DESC LIMIT 1;
eval explain $query;
eval $query;

set use_sort_nest= 1;
eval explain $query;
eval $query;

