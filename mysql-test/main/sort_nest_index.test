CREATE TABLE t1 (
   id int(11) NOT NULL,
   parent_id int(11) DEFAULT NULL,
   name varchar(10) DEFAULT NULL,
   PRIMARY KEY (id),
   KEY ind_parent_id (parent_id)
);

